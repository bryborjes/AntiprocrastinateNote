---
import Layout from "../layouts/Layout.astro";
import AppCards from "../components/appCards.astro";
---

<Layout title="Agenda">
    <main class="max-w-5xl m-auto pb-20 px-4">
        <section
            id="speakers"
            class="flex flex-col flex-wrap items-center justify-center pt-10"
        >
            <h2 class="text-6xl font-bold text-center text-white">
                Actividades
            </h2>
            <p class="max-w-xl text-xl text-sky-200 text-center [text-wrap:balance] mt-4">
                Todo en un solo lugar.
            </p>
            <div id="activitiesContainer" class="grid grid-cols-1 my-16 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-8">
                <!-- Actividades serán insertadas aquí por el script de JavaScript -->
                 <AppCards>
                    <span slot="tast"></span>
                 </AppCards>
            </div>
            <footer>
                <a href="newAc">Crear nueva tarea</a>
            </footer>
        </section>
    </main>
    <script type="text/javascript" src="../js/fetchActivities.js"></script>
    <script type="text/javascript" src="../js/checkSession.js"></script>
</Layout>
